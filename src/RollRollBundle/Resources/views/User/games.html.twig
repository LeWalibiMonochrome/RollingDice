{% extends "RollRollBundle::layout.html.twig" %}

{% block content %}
	<h1>Mes parties</h1>
	
	<a href="{{ path('createGame') }}">Cr√©er une partie</a>

	<h3>Parties en cours</h3>
	<style>
	.ntable {
		border-collapse: collapse;
	}
	.ntable td {
		border: 1px solid black;
	}
	</style>
	<table class="ntable">
		<tr>
			<th>Nom</th>
			<th>Joueurs</th>
		</tr>
	{% for game in games %}
		<tr>
			<td>{{ game.getGame().getName() }}</td>
			<td>1/{{ game.getGame().getNbPlayers() }}</td>
		</tr>
	{% endfor %}
	</table>
	<h3>Anciennes parties</h3>

{% endblock %}