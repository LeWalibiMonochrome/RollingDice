<!DOCTYPE html>
<html>
    <head>
        <title>RollRollBundle</title>
    </head>
    <body>
    	<style>
    		html {
    			background: #DDD;
    			margin: 0;
    			padding: 0;
    		}
    		#menu {
    			display: block;
    			width: 100%;
    			background: rgba(0,0,0,0.7);
    			padding: 5px;
    			color: white;
    			position: absolute;
    			top: 0;
    			left: 0;
    		}
            #menu a {
                color: white;
                text-decoration: none;
            }
            #container {
                display: block;
                width: 100%;
                height: 100%;
                margin: 0;
                position: absolute;
                top: 30px;
                left: 0;
                padding: 30px;
                text-align: center;
            }
            #supcontainer {
                display: inline-block;
                text-align: left;
                width: 70%;
            }
    	</style>
    	<div id="menu">
    		<strong>
                <a href="{% if user is defined and user is not null %}{{ path('games') }}{% else %}{{ path('home') }}{% endif %}">
                    RollingDice
                </a>
            </strong>
            
            <div style="float: right;">
            {% if user is defined and user is not null %}
                {{ user.getPseudo() }} (<a href="{{ path('logout') }}">deconnexion</a>)
            {% else %}
                <a href="{{ path('login') }}">Connexion</a> / <a href="{{ path('register') }}">Inscription</a>
            {% endif %}
    	   </div>
        </div>

        <div id="container">
            <div id="supcontainer">
                {% block content %}{% endblock %}
            </div>
        </div>
    </body>
</html>